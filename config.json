{
    "sender": {
        "server": "<smtp server>",
        "port": -1,
        "username": "<username>",
        "password": "<secret>"
    },
    "heartbeatSeconds": 600,
    "resolverAddress": "8.8.8.8",
    "resolverTimeoutMillis": 500,
    "sites": [
        {
            "server": "www.example.com",
            "protocol": "https",
            "http": {
                "port": 443,
                "url": "<url>",
                "method": "POST",
                "body": "<unescaped body>"
            },
            "connectionTimeoutMillis": 100,
            "timeoutMillis": 500,
            "recipients": [
                "a@example.com",
                "b@example.com"
            ]
        },
        {
            "server": "a.b.c.d",
            "protocol": "mysql",
            "mysql": {
                "port": 3306,
                "username": "<username>",
                "password": "<secret>"
            },
            "connectionTimeoutMillis": 100,
            "timeoutMillis": 500,
            "recipients": [
                "c@example.com",
                "d@example.com"
            ]
        }
    ]
}